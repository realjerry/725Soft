<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink(@Resources.Global.Layout_SiteTitle, "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink(@Resources.Global.Layout_LinkHome_Text, "Index", "Home")</li>
                            <li>@Html.ActionLink(@Resources.Global.Layout_LinkAbout_Text, "About", "Home")</li>
                            <li>@Html.ActionLink(@Resources.Global.Layout_LinkService_Text, "Services", "Home")</li>
                            <li>@Html.ActionLink(@Resources.Global.Layout_LinkCase_Text, "Cases", "Home")</li>
                            <li>@Html.ActionLink(@Resources.Global.Layout_LinkContact_Text, "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="featured">
                <div class="content-wrapper">
                    <hgroup class="title">
                        <h1>@ViewBag.Title.</h1>
                        <h2>@ViewBag.Message</h2>
                    </hgroup>
                    <p>
                        We are a new IT company of a lot of IT solution experiences. And looking forward to provide the best service to customer all around the world.
                    </p>
                </div>
            </section>
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - @Resources.Global.Layout_Copyright</p>
                    <p>@System.Threading.Thread.CurrentThread.CurrentUICulture.ToString()</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
